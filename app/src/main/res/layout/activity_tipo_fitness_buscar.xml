<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Botón para buscar recetas de Ensaladas -->
    <Button
        android:id="@+id/buttonBuscarEnsaladas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buscar_ensaladas" />

    <!-- Botón para buscar recetas de Batidos -->
    <Button
        android:id="@+id/buttonBuscarBatidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buscar_batidos"
        android:layout_marginTop="16dp" />

</LinearLayout>
