<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_crear_receta_sopas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Campo: Nombre de la receta -->
        <EditText
            android:id="@+id/editTextNombreRecetaSopas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_receta"
            android:inputType="text"
            android:padding="16dp"
            android:minHeight="48dp"/>

        <!-- Campo: Utensilios -->
        <EditText
            android:id="@+id/editTextUtensiliosSopas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_utensilios"
            android:inputType="text"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"/>

        <!-- Campo: Tiempo aproximado -->
        <EditText
            android:id="@+id/editTextTiempoAproximadoSopas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_tiempo_aproximado"
            android:inputType="text"
            android:padding="16dp"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"/>

        <!-- Campo: Ingredientes -->
        <EditText
            android:id="@+id/editTextIngredientesSopas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ingredientes"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>

        <!-- Campo: Preparación -->
        <EditText
            android:id="@+id/editTextPreparacionSopas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_preparacion"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:gravity="top"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>

        <!-- Campo: Foto final (título) -->
        <TextView
            android:id="@+id/textViewFotoFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_foto_final"
            android:layout_marginTop="8dp"/>

        <!-- Imagen: Foto final -->
        <ImageView
            android:id="@+id/imageViewFotoFinalSopas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/hint_foto_final"/>

        <!-- Campo: Consejos -->
        <EditText
            android:id="@+id/editTextConsejoSopas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_consejo"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:padding="16dp"
            android:layout_marginTop="8dp"/>

        <!-- Botón: Guardar Receta -->
        <Button
            android:id="@+id/buttonGuardarRecetaSopas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_receta"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
