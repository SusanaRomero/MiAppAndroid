<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_crear_receta_carnes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Campo: Nombre de la receta -->
        <EditText
            android:id="@+id/editTextNombreRecetaCarnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_receta"
            android:inputType="text"
            android:padding="12dp"
            android:minHeight="48dp"/>

        <!-- Campo: Utensilios -->
        <EditText
            android:id="@+id/editTextUtensiliosCarnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_utensilios"
            android:inputType="text"
            android:padding="12dp"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Tiempo de cocción -->
        <EditText
            android:id="@+id/editTextTiempoAproximadoCarnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_tiempo_coccion"
            android:inputType="text"
            android:padding="12dp"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Ingredientes -->
        <EditText
            android:id="@+id/editTextIngredientesCarnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ingredientes"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Preparación -->
        <EditText
            android:id="@+id/editTextPreparacionCarnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_preparacion"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Foto final -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_foto_final"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/imageViewFotoFinalCarnes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/hint_foto_final" />

        <!-- Campo: Consejo -->
        <EditText
            android:id="@+id/editTextConsejoCarnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_consejo"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

        <!-- Botón: Guardar Receta -->
        <Button
            android:id="@+id/buttonGuardarRecetaCarnes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_receta"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
