<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_crear_receta_pasabocas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Campo: Nombre de la receta -->
        <EditText
            android:id="@+id/editTextNombreRecetaPasabocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_receta"
            android:padding="16dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <!-- Campo: Utensilios -->
        <EditText
            android:id="@+id/editTextUtensiliosPasabocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_utensilios"
            android:padding="16dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <!-- Campo: Tiempo aproximado -->
        <EditText
            android:id="@+id/editTextTiempoAproximadoPasabocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_tiempo_aproximado"
            android:padding="16dp"
            android:minHeight="48dp"
            android:inputType="text"/>

        <!-- Campo: Ingredientes -->
        <EditText
            android:id="@+id/editTextIngredientesPasabocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ingredientes"
            android:padding="16dp"
            android:minHeight="48dp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"/>

        <!-- Campo: Foto final -->
        <ImageView
            android:id="@+id/imageViewFotoFinalPasabocas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/hint_foto_final"/>

        <!-- Campo: Preparación -->
        <EditText
            android:id="@+id/editTextPreparacionPasabocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_preparacion"
            android:padding="16dp"
            android:minHeight="48dp"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:gravity="top"/>

        <!-- Campo: Consejo -->
        <EditText
            android:id="@+id/editTextConsejoPasabocas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_consejo"
            android:padding="16dp"
            android:minHeight="48dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"/>

        <!-- Botón: Guardar Receta -->
        <Button
            android:id="@+id/buttonGuardarRecetaPasabocas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_receta"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
