<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_crear_receta_panaderia_dulce"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <!-- Campo: Nombre de la receta -->
        <EditText
            android:id="@+id/editTextNombreRecetaPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre_receta"
            android:autofillHints="name"
            android:inputType="text"
            android:padding="16dp" />

        <!-- Campo: Utensilios -->
        <EditText
            android:id="@+id/editTextUtensiliosPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_utensilios"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Tiempo de preparación -->
        <EditText
            android:id="@+id/editTextTiempoAproximadoPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_tiempo_aproximado"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Ingredientes -->
        <EditText
            android:id="@+id/editTextIngredientesPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ingredientes"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Preparación -->
        <EditText
            android:id="@+id/editTextPreparacionPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_preparacion"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:gravity="top"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Campo: Foto final -->
        <TextView
            android:id="@+id/editTextFotoPanaderiaDulce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_foto_final"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/imageViewFotoFinalPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/hint_foto_final" />

        <!-- Campo: Consejo -->
        <EditText
            android:id="@+id/editTextConsejoPanaderiaDulce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_consejo"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Botón: Guardar Receta -->
        <Button
            android:id="@+id/buttonGuardarRecetaPanaderiaDulce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_receta"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
